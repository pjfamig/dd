<li>
<div class="row">	
  <div class="user-avatar">
	<div class="user-avatar-inner">
		<span class="user">
		    <%= image_tag comment.user.avatar.url(:thumb)  %>
  		</span>
	</div>
  </div>
	
	<div class="comment-body">
	<strong><%= link_to comment.user.username, user_path(comment.user) %></strong> <span class="comment-timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
	<br>
  <span class="comment-content"><%= comment.content %></span><br>


	<%= link_to "Reply", new_post_comment_path(comment.post_id, :parent_id => comment) %>
</div>	
</div>
</li>