<!DOCTYPE html>
<html>
<head>
    <title><%= yield(:title) %> | dailydocket.org</title>  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>

</head>
<body>
	<%= render 'layouts/header' %>
	
    <div class="container">
		<div class="row">
			<div class="col-sm-12 content">
				<% flash.each do |message_type, message| %>
		        	<div class="alert alert-<%= message_type %>"><%= message %></div>
		      	<% end %>
		      
      			<%= yield %>
      			<%= debug(params) if Rails.env.development? %>
				<br>
			</div>
		</div>
    </div>
  </body>
</html>
