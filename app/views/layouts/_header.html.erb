
<header class="navbar navbar-fixed-top">
  <div class="container ">
		<div class="row">

			<div class="col-sm-12 header">	
		      <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target="#collapsed-content">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>		
	
	<img src='/uploads/logo/scales_of_justice_gold.png' width='20px' style="float: left; padding-top: 18px;">
    <%= link_to "dailydocket.org", root_path, id: "logo" %> 

    <nav>
	    <div class="collapse navbar-collapse" id="collapsed-content">
      
<p class="navbar-text navbar-left">
	
	<%= link_to "News", root_path, :class => "navbar-link" %>
